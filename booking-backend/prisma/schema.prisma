generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(cuid())
  name           String
  email          String    @unique
  password       String?
  googleId       String?   @unique
  profileImage   String?   // DP from Google or custom upload
  role           Role      @default(USER)
  bookings       Booking[]
  reviews        Review[]
  businesses     Business[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Business {
  id            String     @id @default(cuid())
  ownerId       String
  owner         User       @relation(fields: [ownerId], references: [id])
  name          String
  description   String?
  category      String      // hotel, restaurant, resort, etc.
  location      String
  latitude      Float?
  longitude     Float?
  rating        Float?      @default(0)
  images        String[]    // Array of image URLs
  contactEmail  String?
  contactPhone  String?
  units         Unit[]
  reviews       Review[]
  bookings      Booking[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Unit {
  id              String    @id @default(cuid())
  businessId      String
  business        Business  @relation(fields: [businessId], references: [id])
  type            String    // single, double, suite, etc.
  pricePerNight   Float
  available       Boolean   @default(true)
  maxGuests       Int       @default(2)
  amenities       String[]  // wifi, breakfast, pool etc.
  bookings        Booking[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Booking {
  id              String     @id @default(cuid())
  userId          String
  businessId      String
  unitId          String?
  user            User       @relation(fields: [userId], references: [id])
  business        Business   @relation(fields: [businessId], references: [id])
  unit            Unit?      @relation(fields: [unitId], references: [id])
  startDate       DateTime
  endDate         DateTime
  totalAmount     Float
  paymentStatus   PaymentStatus @default(PENDING)
  bookingStatus   BookingStatus @default(CONFIRMED)
  confirmationCode String?   // for user + owner confirmation
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
}

model Review {
  id          String    @id @default(cuid())
  userId      String
  businessId  String
  user        User      @relation(fields: [userId], references: [id])
  business    Business  @relation(fields: [businessId], references: [id])
  rating      Int
  comment     String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Cache {
  id          String    @id @default(cuid())
  key         String    @unique
  value       Json
  expiresAt   DateTime
  createdAt   DateTime  @default(now())
}

enum Role {
  USER
  OWNER
  ADMIN
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}

enum BookingStatus {
  CONFIRMED
  CANCELLED
  COMPLETED
}